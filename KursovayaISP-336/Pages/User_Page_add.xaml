<Page x:Class="KursovayaISP_336.Pages.User_Page_add"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KursovayaISP_336.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      
      IsVisibleChanged="Page_IsVisibleChanged">

    <Grid Background="#363538">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <StackPanel MaxWidth="500">

            <TextBlock  Text="Login" FontSize="20" Foreground = "#fffeff"/>
            <TextBox Name="Login" Text="{Binding Login}"   Background = "#fefefe" Foreground = "#adadad" Height="29"/>
            <TextBlock  Text="Password" FontSize="20" Foreground = "#fffeff"/>
            <TextBox x:Name="Password" Text="{Binding Password}"   Background = "#fefefe" Foreground = "#adadad" RenderTransformOrigin="0.502,2.336" Height="27"/>

        </StackPanel>

        <Button Grid.Row="1" MaxWidth="500" Margin="10" Content="Сохранить" FontSize="20" Click="Button_Click"   Background = "Black" Foreground = "White" />
    </Grid>
</Page>
